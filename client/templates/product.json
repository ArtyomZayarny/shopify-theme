{
  "sections": {
    "main": {
      "type": "main-product",
      "blocks": {
        "vendor": {
          "type": "text",
          "settings": {
            "text": "{{ product.vendor }}",
            "text_style": "uppercase"
          }
        },
        "title": {
          "type": "title"
        },
        "caption": {
          "type": "text",
          "settings": {
            "text": "{{ product.metafields.descriptors.subtitle.value }}",
            "text_style": "subtitle"
          }
        },
        "metafields": {
          "type": "metafields"
        },
        "price": {
          "type": "price"
        },
        "variant_picker": {
          "type": "variant_picker",
          "settings": {
            "picker_type": "button"
          }
        },
        "quantity_selector": {
          "type": "quantity_selector"
        },
        "buy_buttons": {
          "type": "buy_buttons",
          "settings": {
            "show_dynamic_checkout": true,
            "show_gift_card_recipient": true
          }
        },
        "description": {
          "type": "description"
        },
        "collapsible-row-0": {
          "type": "collapsible_tab",
          "settings": {
            "heading": "Materials & Tech",
            "icon": "iron",
            "content": "<p>Engineered with cutting-edge materials — from lightweight carbon fiber frames to Gore-Tex membranes and Thinsulate insulation. Every component is selected for peak performance in extreme alpine conditions.</p>",
            "page": ""
          }
        },
        "collapsible-row-1": {
          "type": "collapsible_tab",
          "settings": {
            "heading": "Produced In",
            "icon": "map_pin",
            "content": "<p>Manufactured by certified sports equipment facilities across Europe and North America. Each product meets rigorous safety standards and undergoes extensive field testing in real alpine environments.</p>",
            "page": ""
          }
        },
        "collapsible-row-2": {
          "type": "collapsible_tab",
          "settings": {
            "heading": "Categories",
            "icon": "clipboard",
            "content": "",
            "page": ""
          }
        },
        "share": {
          "type": "share",
          "settings": {
            "share_label": "Share"
          }
        }
      },
      "block_order": [
        "vendor",
        "title",
        "caption",
        "metafields",
        "price",
        "variant_picker",
        "quantity_selector",
        "buy_buttons",
        "description",
        "collapsible-row-0",
        "collapsible-row-1",
        "collapsible-row-2",
        "share"
      ],
      "settings": {
        "color_scheme": "scheme-2",
        "enable_sticky_info": true,
        "gallery_layout": "stacked",
        "media_size": "large",
        "constrain_to_viewport": true,
        "mobile_thumbnails": "hide",
        "hide_variants": true,
        "enable_video_looping": false,
        "padding_top": 36,
        "padding_bottom": 12
      }
    },
    "specs-showcase": {
      "type": "product-specs-showcase",
      "blocks": {
        "heading-1": {
          "type": "heading",
          "settings": {
            "heading": "Technical Details",
            "heading_size": "h3"
          }
        },
        "spec-1": {
          "type": "spec_item",
          "settings": {
            "label": "Weight",
            "value": "1,200g",
            "icon": "ruler"
          }
        },
        "spec-2": {
          "type": "spec_item",
          "settings": {
            "label": "Insulation",
            "value": "Gore-Tex Pro",
            "icon": "snowflake"
          }
        },
        "spec-3": {
          "type": "spec_item",
          "settings": {
            "label": "Flex Rating",
            "value": "110 — Advanced",
            "icon": "lightning_bolt"
          }
        },
        "heading-2": {
          "type": "heading",
          "settings": {
            "heading": "Performance",
            "heading_size": "h3"
          }
        },
        "highlight-1": {
          "type": "highlight",
          "settings": {
            "label": "Waterproof",
            "rating": 9,
            "description": "Fully sealed seams with Gore-Tex membrane"
          }
        },
        "highlight-2": {
          "type": "highlight",
          "settings": {
            "label": "Warmth",
            "rating": 8,
            "description": "Thinsulate insulation rated to -25\u00b0C"
          }
        }
      },
      "block_order": [
        "heading-1",
        "spec-1",
        "spec-2",
        "spec-3",
        "heading-2",
        "highlight-1",
        "highlight-2"
      ],
      "settings": {
        "title": "Technical <em>Specifications</em>",
        "heading_size": "h1",
        "layout": "full",
        "color_scheme": "scheme-5",
        "padding_top": 48,
        "padding_bottom": 48
      }
    },
    "related-products": {
      "type": "related-products",
      "settings": {
        "heading": "You may also like",
        "heading_size": "h2",
        "columns_desktop": 4,
        "color_scheme": "scheme-1",
        "image_ratio": "portrait",
        "show_secondary_image": true,
        "show_vendor": false,
        "show_rating": false,
        "columns_mobile": "2",
        "padding_top": 48,
        "padding_bottom": 48
      }
    }
  },
  "order": [
    "main",
    "specs-showcase",
    "related-products"
  ]
}
