{{ 'section-product-specs-showcase.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div
    class="specs-showcase page-width section-{{ section.id }}-padding isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
    {% if settings.animations_reveal_on_scroll %}
      data-cascade
    {% endif %}
  >
    {%- unless section.settings.title == blank -%}
      <div class="specs-showcase__header">
        <h2 class="specs-showcase__title inline-richtext {{ section.settings.heading_size }}">
          {{ section.settings.title }}
        </h2>
      </div>
    {%- endunless -%}

    <div class="specs-showcase__content specs-showcase__content--{{ section.settings.layout }}">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'heading' -%}
            <div
              class="specs-showcase__block specs-showcase__subheading{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
              {{ block.shopify_attributes }}
              {% if settings.animations_reveal_on_scroll %}
                data-cascade
                style="--animation-order: {{ forloop.index }};"
              {% endif %}
            >
              <h3 class="{{ block.settings.heading_size }}">
                {{ block.settings.heading | escape }}
              </h3>
            </div>

          {%- when 'spec_item' -%}
            <div
              class="specs-showcase__block specs-showcase__spec-item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
              {{ block.shopify_attributes }}
              {% if settings.animations_reveal_on_scroll %}
                data-cascade
                style="--animation-order: {{ forloop.index }};"
              {% endif %}
            >
              <div class="specs-showcase__spec-row">
                {%- if block.settings.icon != 'none' -%}
                  <span class="specs-showcase__spec-icon">
                    {%- render 'icon-accordion', icon: block.settings.icon -%}
                  </span>
                {%- endif -%}
                <span class="specs-showcase__spec-label">{{ block.settings.label | escape }}</span>
                <span class="specs-showcase__spec-divider"></span>
                <span class="specs-showcase__spec-value">{{ block.settings.value | escape }}</span>
              </div>
            </div>

          {%- when 'highlight' -%}
            <div
              class="specs-showcase__block specs-showcase__highlight{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
              {{ block.shopify_attributes }}
              {% if settings.animations_reveal_on_scroll %}
                data-cascade
                style="--animation-order: {{ forloop.index }};"
              {% endif %}
            >
              <div class="specs-showcase__highlight-header">
                <span class="specs-showcase__highlight-label">{{ block.settings.label | escape }}</span>
                <span class="specs-showcase__highlight-score">{{ block.settings.rating }}/10</span>
              </div>
              <div class="specs-showcase__rating-bar">
                <div
                  class="specs-showcase__rating-fill"
                  style="--rating-percent: {{ block.settings.rating | times: 10 }}%;"
                ></div>
              </div>
              {%- if block.settings.description != blank -%}
                <p class="specs-showcase__highlight-desc">{{ block.settings.description | escape }}</p>
              {%- endif -%}
            </div>

          {%- when 'image' -%}
            <div
              class="specs-showcase__block specs-showcase__image specs-showcase__image--{{ block.settings.image_ratio }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
              {{ block.shopify_attributes }}
              {% if settings.animations_reveal_on_scroll %}
                data-cascade
                style="--animation-order: {{ forloop.index }};"
              {% endif %}
            >
              {%- if block.settings.image != blank -%}
                <div class="specs-showcase__image-wrapper media">
                  {{
                    block.settings.image
                    | image_url: width: 1500
                    | image_tag:
                      loading: 'lazy',
                      widths: '375, 550, 750, 1100, 1500',
                      sizes: '(min-width: 990px) 50vw, 100vw',
                      class: 'specs-showcase__img'
                  }}
                </div>
              {%- else -%}
                <div class="specs-showcase__image-wrapper media">
                  {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                </div>
              {%- endif -%}
              {%- if block.settings.caption != blank -%}
                <p class="specs-showcase__caption">{{ block.settings.caption | escape }}</p>
              {%- endif -%}
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

